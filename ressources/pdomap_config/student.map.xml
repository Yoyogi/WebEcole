<?xml version="1.0" encoding="UTF-8"?>
<pdomap>
    <adapter name="students" table="etudiant">
        <entity>
        <properties>
            <primary name="id" column="id_etudiant" />
            <property name="name" column="nom" type="char" size="45" />
            <property name="surname" column="prenom" type="char" size="45" />
            <property name="birthday" column="date_naissance" type="date"/>
            <property name="adress" column="rue" type="char" size="45" />
            <property name="zipCode" column="cp" type="char" size="11" />
            <property name="city" column="ville" type="char" size="45" />
            <property name="mail" column="email" type="char" size="45" />
            <property name="login" column="ulogin" type="char" size="45" />
            <property name="passwd" column="passwd" type="char" size="45" />
            <property name="photo" column="photo" type="char" size="250" />
        </properties>
        <insert name="InsertStudent">
            <params>
                <param name="name" />
                <param name="surname" />
                <param name="birthday" />
                <param name="adress" />
                <param name="zipCode" />
                <param name="city" />
                <param name="mail" />
                <param name="login" />
                <param name="passwd" />
                <param name="photo" />
            </params>
            <set property="name" value="{name}" />
            <set property="surname" value="{surname}" />
            <set property="birthday" value="{birthday}" />
            <set property="adress" value="{adress}" />
            <set property="zipCode" value="{zipCode}" />
            <set property="city" value="{city}" />
            <set property="mail" value="{mail}" />
            <set property="login" value="{login}" />
            <set property="passwd" value="{passwd}" function="md5" />
            <set property="photo" value="{photo}" />
        </insert>
    </entity>
  </adapter>
</pdomap>