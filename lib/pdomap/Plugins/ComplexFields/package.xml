<?xml version="1.0"?>
<package name="ComplexFields">
  <title>
      Complex Fields
  </title>
  <description>
      Enables you to create agregated fields with
      specific capabilities : 
          - versionning
          - restoring records
          - uploading files
          - uploading pictures
  </description>
  <author>I. CHIRIAC</author>
  <update>0</update>
  <!-- installed fields list -->
  <fields>
    <field name="File">
        <params>
          <!-- 
              List accepted extension. If defined
              will exclude all others extensions
          -->
          <param name="extensions" value="zip;rar;gz;tar;" />
          <!-- 
              List excluded extension 
          -->
          <param name="exclude" value="exe;com;bin;dll;sh;php;php5;php3;php4" />
          <!-- 
              Defines the maximum file size in KO.
              If not defined or defined 0, there is no limit
          -->
          <param name="max_size" value="1024" />
        </params>
    </field>                
  </fields>
  <!-- no mapping -->
  <mapping />
  <!-- no cache adapter -->
  <cache />
  <!-- no database adapter -->
  <database />
</package>